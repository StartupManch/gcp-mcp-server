{
    "branches": [
        "main"
    ],
    "repositoryUrl": "https://github.com/StartupManch/gcp-mcp-server",
    "plugins": [
        "@semantic-release/commit-analyzer",
        [
            "@semantic-release/release-notes-generator",
            {
                "preset": "conventionalcommits",
                "presetConfig": {
                    "types": [
                        {
                            "type": "feat",
                            "section": "‚ú® Features"
                        },
                        {
                            "type": "fix",
                            "section": "üêõ Bug Fixes"
                        },
                        {
                            "type": "docs",
                            "section": "üìö Documentation"
                        },
                        {
                            "type": "style",
                            "section": "üíÑ Styling"
                        },
                        {
                            "type": "refactor",
                            "section": "‚ôªÔ∏è Code Refactoring"
                        },
                        {
                            "type": "perf",
                            "section": "‚ö° Performance Improvements"
                        },
                        {
                            "type": "test",
                            "section": "‚úÖ Tests"
                        },
                        {
                            "type": "build",
                            "section": "üîß Build System"
                        },
                        {
                            "type": "ci",
                            "section": "üë∑ CI/CD"
                        },
                        {
                            "type": "chore",
                            "section": "üßπ Chores"
                        }
                    ]
                }
            }
        ],
        [
            "@semantic-release/changelog",
            {
                "changelogFile": "CHANGELOG.md",
                "changelogTitle": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
            }
        ],
        [
            "@semantic-release/npm",
            {
                "npmPublish": true,
                "tarballDir": "dist-npm"
            }
        ],
        [
            "@semantic-release/github",
            {
                "successComment": false,
                "failComment": false,
                "releasedLabels": false,
                "addReleases": "bottom",
                "assets": [
                    {
                        "path": "dist-npm/*.tgz",
                        "label": "NPM Package"
                    },
                    {
                        "path": "dist/**",
                        "label": "Distribution Files"
                    },
                    {
                        "path": "README.md",
                        "label": "Documentation"
                    }
                ]
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "CHANGELOG.md",
                    "package.json",
                    "package-lock.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ]
    ]
}